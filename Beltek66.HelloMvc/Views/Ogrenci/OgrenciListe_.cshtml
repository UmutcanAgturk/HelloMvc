@model List<Ogrenci>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Yaş</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.Ad</td>
                <td>@ogr.Soyad</td>
                <td>@ogr.Yas</td>
                <td><a class="btn btn-sm btn-primary" href="/Ogrenci/OgrenciDetay/@ogr.Ogrenciid">Detay</a> <a href="/Ogrenci/OgrenciSil/@ogr.Ogrenciid" class="btn btn-sm btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>



